<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.0" method="upgrade">
	<name>com_imprint</name>
	<author>Imprint Team</author>
	<creationDate>February 2013</creationDate>
	<copyright>(C) 2011 - 2013 Imprint Team. All rights reserved.</copyright>
	<license>GNU General Puplic License version 2 or later; see
		LICENSE.txt</license>
	<authorEmail>dev-team-imprint@joomla.bksus.de</authorEmail>
	<authorUrl>joomla-imprint.github.com/imprint/</authorUrl>
	<version>4.0.0alpha</version>
	<description>com_imprint_xml_description</description>
	
	<install>
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>
	<uninstall>
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
		</sql>
	</uninstall>
	<update>
		<schemas>
			<schemapath type="mysql">sql/updates/mysql</schemapath>
		</schemas>
	</update>
	
	<files folder="site">
		<filename>index.html</filename>
		<filename>imprint.php</filename>
		<filename>controller.php</filename>
		
		<folder>language</folder>
		<folder>models</folder>
		<folder>views</folder>
	</files>
	
	<media destination="com_imprint" folder="media" >
		<filename>index.html</filename>
		<folder>css</folder>
		<folder>images</folder>
	</media>
	
	<administration>
		<menu img="class:imprint">com_imprint</menu>
		<submenu>
			<menu link="option=com_imprint&amp;view=imprints" view="imprints"
					img="class:imprint-imprints" alt="Imprint/Imprints">com_imprint_imprints</menu>
			<menu lint="option=com_imprint&amp;view=remarks" view="remarks"
					img="class:imprint-remarks"	alt="Imprint/Remarks">com_imprint_remarks</menu>
			<menu link="option=com_imprint&amp;view=about" view="about"
					img="class:imprint-about" alt="Imprint/About">com_imprint_about</menu>
		</submenu>
		<files folder="admin">
			<filename>access.xml</filename>
			<filename>config.xml</filename>
			<filename>controller.php</filename>
			<filename>imprint.php</filename>
			<filename>index.html</filename>
			<folder>controllers</folder>
			<folder>help</folder>
			<folder>helpers</folder>
			<folder>language</folder>
			<folder>models</folder>
			<folder>sql</folder>
			<folder>tables</folder>
			<folder>views</folder>
		</files>
	</administration>
	
	<updateservers>
		<server type="extension" priority="1" name="Imprint Update Site"></server>
	</updateservers>
</extension>
